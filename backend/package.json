{
  "name": "funding-machine-backend",
  "version": "1.0.0",
  "description": "Backend for Funding Machine - AI-Powered Passive Income Platform",
  "main": "dist/app.js",
  "scripts": {
    "start": "node dist/app.js",
    "dev": "ts-node-dev --respawn --transpile-only src/app.ts",
    "build": "tsc",
    "test": "node test-runner.js",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --runInBand --detectOpenHandles --forceExit",
    "test:integration": "jest --testPathPattern=integration",
    "test:api": "jest --testPathPattern=api",
    "test:performance": "jest --testPathPattern=performance",
    "test:security": "npm run lint && npm audit",
    "test:e2e": "jest --testPathPattern=e2e",
    "test:stress": "node -e \"console.log('Stress testing...'); setTimeout(() => process.exit(0), 1000)\"",
    "test:health": "curl -f http://localhost:3000/health",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev --name init",
    "prisma:seed": "ts-node prisma/seed.ts",
    "prisma:studio": "prisma studio",
    "seed": "npm run prisma:generate && npm run prisma:seed",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "docker:build": "docker build -t funding-machine-backend .",
    "docker:run": "docker run -p 3000:3000 funding-machine-backend",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "deploy": "./deploy.sh",
    "deploy:staging": "./deploy.sh staging",
    "deploy:production": "./deploy.sh production",
    "test:all": "./test-automation.sh",
    "monitor": "node -e \"console.log('Monitoring started...'); require('./dist/services/monitoring.service')\"",
    "prepare": "husky install",
    "pre-commit": "lint-staged"
  },
  "keywords": [
    "funding",
    "passive-income",
    "nodejs",
    "typescript",
    "prisma",
    "ai",
    "fintech"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@langchain/core": "^0.2.0",
    "@langchain/openai": "^0.1.0",
    "@prisma/client": "^6.16.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/express-rate-limit": "^5.1.3",
    "@types/helmet": "^0.0.48",
    "@types/http-status-codes": "^1.2.0",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.10",
    "@types/uuid": "^9.0.7",
    "bcryptjs": "^3.0.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.1.0",
    "express-validator": "^7.0.1",
    "helmet": "^8.1.0",
    "http-status-codes": "^2.3.0",
    "jsonwebtoken": "^9.0.2",
    "langchain": "^0.1.0",
    "morgan": "^1.10.0",
    "openai": "^4.0.0",
    "routing-controllers": "^0.10.4",
    "typedi": "^0.10.0",
    "uuid": "^9.0.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@faker-js/faker": "8.4.1",
    "@types/express": "^4.17.21",
    "@types/express-validator": "^3.0.2",
    "@types/jest": "^30.0.0",
    "@types/joi": "^17.2.2",
    "@types/node": "^20.19.17",
    "@types/supertest": "6.0.2",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.10",
    "jest": "^29.7.0",
    "jest-cli": "^30.1.3",
    "jest-mock-extended": "^4.0.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.4",
    "prisma": "^6.16.2",
    "reflect-metadata": "^0.2.2",
    "supertest": "6.3.3",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsyringe": "^4.10.0",
    "typescript": "^5.9.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
